{
    "app-id": "com.github.appadeia.Taigo",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "taigo",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/clutter/clutter.json",
        {
            "name": "taigo",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Appadeia/taigo.git",
                    "tag": "0.3",
                    "commit": "b66195a9bf14f00d643075d0a48404f559c35310"
                },
                {
                    "type": "patch",
                    "path": "fix-appdata.patch"
                }
            ]
        }
    ]
}
